{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center m-4">Gestion des utilisateurs</h1>
        <table class="table table-dark table-striped">
            <tr>
                <th>id</th>
                <th>email</th>
                <th>nom</th>
                <th>Prenom</th>
                <th>Adresse 1</th>
                <th>Adresse 2</th>
                <th>Ville</th>
                <th>Code postal</th>
            </tr>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.adress1 }}</td>
                    <td>{{ user.adress2 }}</td>
                    <td>{{ user.city }}</td>
                    <td>{{ user.cp }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
